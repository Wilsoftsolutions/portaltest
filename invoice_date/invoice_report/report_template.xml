													<span t-set="total_variant_amount"
														  t-value="total_variant_amount + variant['line_total_qty']"/>
												</t>
											</td>
											<!--calculate sale taxes, net amount-->

											<t t-set="sale_tax" t-value="variant['taxes']"/>
